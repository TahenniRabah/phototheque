<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class="min-h-screen">
    <%- include('partials/nav') %>

    <div class="px-10 py-6">
      <a href="/albums" class="text-blue-600"><u>< Retour</u></a>
      <% if (album){%>
      <h1 class="text-3xl font-bold mb-3"><%= album.titre%></h1>
      <form
        method="post"
        action="/albums/<%= album._id%>"
        enctype="multipart/form-data"
        class="p-4 border"
      >
        <p class="font-semibold text-xl mb-4">Ajouter une image</p>
        <button class="rounded border bg-gray-600 px-2 py-1">
          <input type="file" name="image" accept="image/*" />
        </button>
        <button
          type="submit"
          class="rounded border text-white bg-blue-600 px-2 py-1"
        >
          Ajouter
        </button>
        <% if (error.length){ %>
          <div class="mt-2 rounded border bg-red-600 text-white p-3">
            <p ><%= error %></p>
          </div>
        <% } %>
      </form>
      <ul class="grid grid-cols-5 gap-2 mt-2">
        <% album.images.forEach((el,index) => { %>
        <li class="flex flex-col items-center p-2  w-full border ">
          <img class="m-2 h-60" src="/uploads/<%=album._id %>/<%= el %>" />
          <p class="p-1 m-2 w-full"><%= el%></p>
          <a
          class="rounded-full text-white bg-red-500 py-1 px-2 mb-4"
          href="/albums/<%= album._id %>/delete/<%= index %>">Supprimer</a>
        </li>
        <% }) %>
      </ul>
      <% }%>

    </div>
  </body>
</html>
